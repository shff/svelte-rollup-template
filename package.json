{
  "license": "MIT",
  "name": "svelte-rollup-template",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "start": "rollup -c rollup.config.js --watch",
    "start:hot": "yarn build && NOLLUP=1 nollup -c --hot --port 5000 --content-base dist",
    "rebuild": "yarn clean && yarn build",
    "clean": "rm -rf dist",
    "lint": "eslint app/**/*.js app/**/*.svelte",
    "lint:css": "stylelint '**/*.less' '**/*.svelte' --syntax less",
    "lint:watch": "esw app/*.js app/**/*.svelte -w --color --clear",
    "prettify": "prettier --write ./*.js ./**/*.js ./**/*.svelte",
    "test": "jasmine",
    "e2e": "yarn build && cypress run -C false --config video=false,integrationFolder=app,supportFile=false,pluginsFile=false,testFiles=**/*.spec.js"
  },
  "devDependencies": {
    "@babel/core": "^7.14.2",
    "@babel/plugin-transform-runtime": "^7.14.2",
    "@babel/preset-env": "^7.14.2",
    "@rollup/plugin-html": "^0.2.3",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "livereload": "^0.9.3",
    "node-zopfli": "^2.1.4",
    "nollup": "^0.16.4",
    "rollup": "^2.47.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-gzip": "^2.5.0",
    "rollup-plugin-hot": "^0.1.1",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-svelte-hot": "^0.13.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-watch": "^4.3.1",
    "svelte": "^3.38.2"
  },
  "optionalDependencies": {
    "babel-eslint": "^10.1.0",
    "cypress": "^7.3.0",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "eslint-plugin-unicorn": "^32.0.1",
    "eslint-watch": "^7.0.0",
    "husky": "^6.0.0",
    "jasmine": "^3.7.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "prettier-plugin-svelte": "^2.3.0"
  },
  "babel": {
    "presets": [
      "@babel/env"
    ]
  },
  "browserslist": [
    ">0.6%",
    "not ie 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:promise/recommended",
      "plugin:unicorn/recommended",
      "plugin:cypress/recommended"
    ],
    "plugins": [
      "svelte3",
      "prettier",
      "promise",
      "no-loops",
      "unicorn",
      "cypress",
      "html"
    ],
    "overrides": [
      {
        "files": [
          "**/*.svelte"
        ],
        "processor": "svelte3/svelte3"
      }
    ],
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true
      }
    },
    "settings": {
      "html/html-extensions": [
        ".html",
        ".svelte"
      ]
    },
    "globals": {
      "document": true
    },
    "rules": {
      "no-new": "off",
      "promise/prefer-await-to-callbacks": "error",
      "promise/prefer-await-to-then": "error",
      "no-loops/no-loops": 2,
      "import/no-unresolved": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,json,md,vue}": [
      "prettier --write"
    ]
  }
}
